{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/form.css') }}">
{% endblock %}

{% block body %}
    <div class="form-container">
        <h1>Créer un compte</h1>

        {{ form_start(registrationForm) }}

            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}

            {{ form_row(registrationForm.name, { label: 'Nom' }) }}
            {{ form_row(registrationForm.firstName, { label: 'Prénom' }) }}
            {{ form_row(registrationForm.phone, { label: 'Téléphone' }) }}
            {{ form_row(registrationForm.birth, { label: 'Date de naissance' }) }}

            {{ form_row(registrationForm.adress, { label: 'Adresse postale' }) }}
            {{ form_row(registrationForm.zipCode, { label: 'Code postal' }) }}
            {{ form_row(registrationForm.city, { label: 'Ville' }) }}
            {{ form_row(registrationForm.country, { label: 'Pays' }) }}

            {% if registrationForm.agreeTerms is defined %}
                {{ form_row(registrationForm.agreeTerms) }}
            {% endif %}

            <button type="submit" class="btn btn-primary">S'inscrire</button>

        {{ form_end(registrationForm) }}

        <p style="text-align: center; margin-top: 1rem;">
            Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a>
        </p>
    </div>
{% endblock %}
